                                                                                <div class="form-group">
                                                                                <label><strong>Full Name : </strong> </label>
                                                                                <label value=""> @Model.Name @Model.SecondName @Model.Surname @Model.SecondSurname</label>
                                                                                </div>
                                                                                </div>*@
                                                                                <div class="row">


                                                                                    <div class="col">
                                                                                        <div class="form-group">
                                                                                            <label>
                                                                                                <strong>

                                                                                                    Phone :
                                                                                                </strong>
                                                                                            </label>

                                                                                        </div>
                                                                                        @*  <input class="form-control border" rows="1" type="text" id="PhoneNumber" tabindex="1" asp-for="PhoneNumber" value="@Model.PhoneNumber">*@

                                                                                        <input class="form-control border" rows="1" type="tel" value="@Model.PhoneNumber" oninput="formatPhoneNumber(this);">
