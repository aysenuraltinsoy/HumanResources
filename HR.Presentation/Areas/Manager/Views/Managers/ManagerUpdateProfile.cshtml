                                                                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                                                                                    </div>
                                                                                </div>

                                                                                <div class="row">
                                                                                    <div class="col mb-3">
                                                                                        <div class="form-group">
                                                                                            <label><strong>Address : </strong></label>
                                                                                            <input class="form-control border" rows="1" type="tel" id="Address" asp-for="Address" value="@Model.Address">
                                                                                            <span asp-validation-for="Address" class="text-danger"></span>
                                                                                        </div>
                                                                                    </div>


                                                                                </div>



                                                                            </div>

                                                                            <div class="row">

                                                                                <div class="col d-flex justify-content-center">
                                                                                    <input class="btn btn-success " type="submit" id="Submit" value="Save Changes">
                                                                                </div>

                                                                            </div>

                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    </>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <partial name="~/Areas/Personnel/Views/Partial/Footer.cshtml" />
    </div>
</form>

