                        <h6 class="text-white text-capitalize ps-3 text-center">Update Manager Profile</h6>
                    </div>
                    </div>
                    <div class="card-body px-0 pb-2">
                        <div class="table-responsive p-0">

                            <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
                            <div class="container">
                                <div class="row flex-lg-nowrap ">

                                    <div class="col">
                                        <div class="row">
                                            <div class="col mb-3">
                                                <div class="card d-flex justify-content-center">
                                                    <div class="card-body">
                                                        <div class="e-profile">
                                                            <div class="row text-center text-nowrap">
                                                                <div class="col-4 col-sm-auto mb-3">
                                                                    <div class="mx-auto mb-3" style="width: 140px;">

                                                                        <div>
                                                                            <!-- Uploaded image area-->
                                                                            <img class="d-flex justify-content-center align-items-center rounded " style="height: 140px; width: 140px;" id="imageResult" />
                                                                            <span asp-validation-for="UploadPath" class="text-danger"></span>

                                                                        </div>

                                                                        <span asp-validation-for="UploadPath" class="text-danger"></span>
                                                                    </div>
                                                                    <div class="input-group mb-3 px-2 py-2 rounded-pill bg-white shadow-sm col-lg-2">
                                                                        <input id="upload" type="file" onchange="readURL(this);" class="form-control border-0" asp-for="UploadPath">
                                                                        <label id="upload-label" for="upload" class="font-weight-light text-muted">Choose file</label>
                                                                        <div class="input-group-append">
                                                                            <label for="upload" class="btn btn-light m-0 rounded-pill px-4"> <i class="fa fa-cloud-upload mr-2 text-muted"></i><small class="text-uppercase font-weight-bold text-muted">Choose file</small></label>
                                                                        </div>
                                                                    </div>

                                                                </div>

                                                             
                                                                    <!-- Upload image input-->
                                                              

                                                            
                                                                <div class="col-lg-6 col-md-3 d-flex flex-column align-items-center justify-content-between">
                                                                    <div class="col-4 text-center text-sm-left mb-2 mb-sm-0 d-flex flex-column justify-content-center align-items-center">
                                                                        <h4 class="pt-sm-2 pb-1 mb-0 text-nowrap">@Model.Name @Model.SecondName @Model.Surname @Model.SecondSurname</h4>
                                                                        <h1 class="badge rounded-pill text-bg-dark">@Model.Sector</h1>
                                                                        
                                                                        <strong>@Model.Department</strong>

                                                                 
                                                                       
                                                                    </div>
                                                                    
                                                                </div>
                                                            </div>
                                                            <ul class="nav nav-tabs">
                                                                <li class="nav-item"><a class="active nav-link">Update Information</a></li>
                                                                <li class="nav-item">
                                                                    @* <a class="btn btn-warning  active nav-link" asp-area="Admin" asp-controller="Admin" asp-action="AdminUpdateProfile">
                                                                    Information To Be Updated
                                                                    </a>*@

                                                                </li>
                                                            </ul>
                                                            <div class="tab-content pt-3">
                                                                <div class="tab-pane active">
                                                                    <div novalidate="">
                                                                        <div class="row">
                                                                            <div class="col">
